@page
@model GYMPT.Pages.DisciplinesModel
@{
    ViewData["Title"] = "Disciplinas";
}

<h1>Disciplinas</h1>

@* Verificamos si la lista tiene datos antes de intentar dibujar la tabla *@
@if (Model.DisciplineList != null && Model.DisciplineList.Any())
{
    <table class="table table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>ID Instructor</th>
                <th>Hora Inicio</th>
                <th>Hora Fin</th>
            </tr>
        </thead>
        <tbody>
            @* Este bucle recorre cada 'membership' en la lista que preparamos en el archivo .cs *@
            @foreach (Models.Discipline discipline in Model.DisciplineList)
            {
                <tr>
                    <td>@discipline.Name</td>
                    <td>@discipline.IdInstructor</td>
                    <td>@discipline.StartTime</td>
                    <td>@discipline.EndTime</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    @* Si la lista está vacía, mostramos un mensaje amigable *@
    <div class="alert alert-info mt-4" role="alert">
        No hay disciplinas registradas en este momento.
    </div>
}
