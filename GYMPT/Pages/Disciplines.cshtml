@page
@model GYMPT.Pages.DisciplinesModel
@{
    ViewData["Title"] = "Disciplinas GYMPT";
}

<h1>Disciplinas GYMPT</h1>
<p>Lista de disciplinas actualmente registradas en el gimnasio.</p>

<div class="mb-4">
    <a asp-page="/DisciplineCreate" class="btn btn-primary">
        <i class="fas fa-plus"></i> Crear Nueva Disciplina
    </a>
</div>

@if (Model.DisciplineList != null && Model.DisciplineList.Any())
{
    <table class="table table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>ID Instructor</th>
                <th>Hora Inicio</th>
                <th>Hora Fin</th>
                <th style="width: 150px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var discipline in Model.DisciplineList)
            {
                <tr>
                    <td>@discipline.Name</td>
                    <td>@discipline.IdInstructor</td>
                    <td>@discipline.StartTime?.ToString(@"hh\:mm")</td>
                    <td>@discipline.EndTime?.ToString(@"hh\:mm")</td>
                    <td>
                        <a asp-page="/Disciplines/Edit" asp-route-id="@discipline.Id" class="btn btn-sm btn-success">Editar</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@discipline.Id" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que quieres eliminar esta disciplina?');">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-4" role="alert">
        No hay disciplinas registradas en este momento.
    </div>
}
