@page
@model GYMPT.Pages.Instructors.CreateModel

<h2>Crear Instructor</h2>

<form method="post">
    <fieldset>
        <legend>Datos de Usuario</legend>
        <div class="form-group">
            <label>Nombre</label>
            <input asp-for="Instructor.Name" class="form-control" />
        </div>

        <div class="form-group">
            <label>Primer Apellido</label>
            <input asp-for="Instructor.FirstLastname" class="form-control" />
        </div>

        <div class="form-group">
            <label>Segundo Apellido</label>
            <input asp-for="Instructor.SecondLastname" class="form-control" />
        </div>

        <div class="form-group">
            <label>CI</label>
            <input asp-for="Instructor.Ci" class="form-control" />
        </div>

        <div class="form-group">
            <label>Fecha de Nacimiento</label>
            <input asp-for="Instructor.DateBirth" type="date" class="form-control" />
        </div>

        <input type="hidden" asp-for="Instructor.Role" value="Instructor" />
    </fieldset>

    <fieldset>
        <legend>Datos de Instructor</legend>
        <div class="form-group">
            <label>Fecha de Contratación</label>
            <input asp-for="Instructor.HireDate" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label>Salario Mensual</label>
            <input asp-for="Instructor.MonthlySalary" type="number" step="0.01" class="form-control" />
        </div>

        <div class="form-group">
            <label>Especialización</label>
            <input asp-for="Instructor.Specialization" class="form-control" />
        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="/Users/User" class="btn btn-secondary">Cancelar</a>
</form>
