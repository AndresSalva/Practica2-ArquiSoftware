@page
@model GYMPT.Pages.Instructors.CreateModel
@{
    ViewData["Title"] = "Registrar Instructor";
}

<h2 class="text-center mb-4">Registrar Instructor</h2>

<div class="card shadow-sm p-4 mx-auto" style="max-width: 700px;">
    <form method="post">
        <div class="row mb-3">
            <div class="col">
                <label asp-for="Instructor.Name" class="form-label">Nombre</label>
                <input asp-for="Instructor.Name" class="form-control" readonly />
            </div>
            <div class="col">
                <label asp-for="Instructor.Ci" class="form-label">CI</label>
                <input asp-for="Instructor.Ci" class="form-control" readonly />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="Instructor.FirstLastname" class="form-label">Primer Apellido</label>
                <input asp-for="Instructor.FirstLastname" class="form-control" readonly />
            </div>
            <div class="col">
                <label asp-for="Instructor.SecondLastname" class="form-label">Segundo Apellido</label>
                <input asp-for="Instructor.SecondLastname" class="form-control" readonly />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Instructor.DateBirth" class="form-label">Fecha de Nacimiento</label>
            <input asp-for="Instructor.DateBirth" class="form-control" type="date" readonly />
        </div>

        <hr />

        <div class="mb-3">
            <label asp-for="Instructor.HireDate" class="form-label">Fecha de Contratación</label>
            <input asp-for="Instructor.HireDate" class="form-control" type="date" />
            <span asp-validation-for="Instructor.HireDate" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="Instructor.MonthlySalary" class="form-label">Salario Mensual (Bs)</label>
                <input asp-for="Instructor.MonthlySalary" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Instructor.MonthlySalary" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Instructor.Specialization" class="form-label">Especialización</label>
                <input asp-for="Instructor.Specialization" class="form-control" placeholder="Ej: Pesas, Crossfit, Yoga..." />
                <span asp-validation-for="Instructor.Specialization" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-page="/Users/User" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar Instructor</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
