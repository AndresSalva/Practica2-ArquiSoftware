@page "{id:int}"
@model GYMPT.Pages.Instructors.EditInstructorModel
@{
    ViewData["Title"] = "Editar Instructor";
}

<h1>Editar Instructor: @Model.Instructor.Name</h1>

<form method="post">
    <fieldset>
        <legend>Datos del Usuario</legend>

        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="Instructor.Name" class="form-control" />
            <span asp-validation-for="Instructor.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Apellido Paterno</label>
            <input asp-for="Instructor.FirstLastname" class="form-control" />
            <span asp-validation-for="Instructor.FirstLastname" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Apellido Materno</label>
            <input asp-for="Instructor.SecondLastname" class="form-control" />
            <span asp-validation-for="Instructor.SecondLastname" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">CI</label>
            <input asp-for="Instructor.Ci" class="form-control" />
            <span asp-validation-for="Instructor.Ci" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha de Nacimiento</label>
            <input asp-for="Instructor.DateBirth" type="date" class="form-control" />
            <span asp-validation-for="Instructor.DateBirth" class="text-danger"></span>
        </div>
    </fieldset>

    <fieldset>
        <legend>Datos Específicos de Instructor</legend>

        <div class="mb-3">
            <label class="form-label">Especialización</label>
            <input asp-for="Instructor.Specialization" class="form-control" />
            <span asp-validation-for="Instructor.Specialization" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha de Contratación</label>
            <input asp-for="Instructor.HireDate" type="date" class="form-control" />
            <span asp-validation-for="Instructor.HireDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Sueldo Mensual</label>
            <input asp-for="Instructor.MonthlySalary" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Instructor.MonthlySalary" class="text-danger"></span>
        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-page="/Users/User" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}