@page "{id:long}"
@model GYMPT.Pages.Instructors.EditInstructorModel
@{
    ViewData["Title"] = "Editar Instructor";
}

<h1>Editar Instructor: @Model.Instructor.Name</h1>

<form method="post">
    <fieldset>
        <legend>Datos del Usuario</legend>
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="Instructor.Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Apellido Paterno</label>
            <input asp-for="Instructor.FirstLastname" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Apellido Materno</label>
            <input asp-for="Instructor.SecondLastname" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">CI</label>
            <input asp-for="Instructor.CI" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Fecha de Nacimiento</label>
            <input asp-for="Instructor.DateBirth" type="date" class="form-control" />
        </div>
    </fieldset>

    <fieldset>
        <legend>Datos Específicos de Instructor</legend>
        <div class="mb-3">
            <label class="form-label">Especialización</label>
            <input asp-for="Instructor.Specialization" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Fecha de Contratación</label>
            <input asp-for="Instructor.HireDate" type="date" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Sueldo Mensual</label>
            <input asp-for="Instructor.MonthlySalary" type="number" step="0.01" class="form-control" />
        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-page="/Users" class="btn btn-secondary">Cancelar</a>
</form>
