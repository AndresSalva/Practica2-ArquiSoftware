@page
@model GYMPT.Pages.Clients.CreateModel

<h2>Crear Cliente</h2>

<form method="post">
    <fieldset>
        <legend>Datos de Usuario</legend>
        <div class="form-group">
            <label>Nombre</label>
            <input asp-for="Client.Name" class="form-control" />
        </div>

        <div class="form-group">
            <label>Primer Apellido</label>
            <input asp-for="Client.FirstLastname" class="form-control" />
        </div>

        <div class="form-group">
            <label>Segundo Apellido</label>
            <input asp-for="Client.SecondLastname" class="form-control" />
        </div>

        <div class="form-group">
            <label>CI</label>
            <input asp-for="Client.Ci" class="form-control" />
        </div>

        <div class="form-group">
            <label>Fecha de Nacimiento</label>
            <input asp-for="Client.DateBirth" type="date" class="form-control" />
        </div>

        <input type="hidden" asp-for="Client.Role" value="Client" />
    </fieldset>

    <fieldset>
        <legend>Datos de Cliente</legend>

        <div class="form-group">
            <label>Nivel de Fitness</label>
            <select asp-for="Client.FitnessLevel" class="form-control">
                <option value="Principiante">Principiante</option>
                <option value="Intermedio">Intermedio</option>
                <option value="Avanzado">Avanzado</option>
            </select>
        </div>

        <div class="form-group">
            <label>Peso Inicial (kg)</label>
            <input asp-for="Client.InitialWeightKg" type="number" step="0.01" class="form-control" />
        </div>

        <div class="form-group">
            <label>Peso Actual (kg)</label>
            <input asp-for="Client.CurrentWeightKg" type="number" step="0.01" class="form-control" />
        </div>

        <div class="form-group">
            <label>Teléfono de Emergencia</label>
            <input asp-for="Client.EmergencyContactPhone" class="form-control" />
        </div>
    </fieldset>


    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="/Users/User" class="btn btn-secondary">Cancelar</a>
</form>
