@page
@model GYMPT.Pages.Clients.CreateModel
@{
    ViewData["Title"] = "Registrar Cliente";
}

<h2 class="text-center mb-4">Registrar Cliente</h2>

<div class="card shadow-sm p-4 mx-auto" style="max-width: 700px;">
    <form method="post">
        <div class="row mb-3">
            <div class="col">
                <label asp-for="Client.Name" class="form-label">Nombre</label>
                <input asp-for="Client.Name" class="form-control" readonly />
            </div>
            <div class="col">
                <label asp-for="Client.Ci" class="form-label">CI</label>
                <input asp-for="Client.Ci" class="form-control" readonly />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="Client.FirstLastname" class="form-label">Primer Apellido</label>
                <input asp-for="Client.FirstLastname" class="form-control" readonly />
            </div>
            <div class="col">
                <label asp-for="Client.SecondLastname" class="form-label">Segundo Apellido</label>
                <input asp-for="Client.SecondLastname" class="form-control" readonly />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Client.DateBirth" class="form-label">Fecha de Nacimiento</label>
            <input asp-for="Client.DateBirth" class="form-control" type="date" readonly />
        </div>

        <hr />

        <div class="mb-3">
            <label asp-for="Client.FitnessLevel" class="form-label">Nivel de Fitness</label>
            <select asp-for="Client.FitnessLevel" class="form-select">
                <option value="">-- Seleccione un nivel --</option>
                <option value="Principiante">Principiante</option>
                <option value="Intermedio">Intermedio</option>
                <option value="Avanzado">Avanzado</option>
            </select>
            <span asp-validation-for="Client.FitnessLevel" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <div class="col">
                <label asp-for="Client.InitialWeightKg" class="form-label">Peso Inicial (kg)</label>
                <input asp-for="Client.InitialWeightKg" class="form-control" type="number" step="0.1" />
                <span asp-validation-for="Client.InitialWeightKg" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Client.CurrentWeightKg" class="form-label">Peso Actual (kg)</label>
                <input asp-for="Client.CurrentWeightKg" class="form-control" type="number" step="0.1" />
                <span asp-validation-for="Client.CurrentWeightKg" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Client.EmergencyContactPhone" class="form-label">Teléfono de Emergencia</label>
            <input asp-for="Client.EmergencyContactPhone" class="form-control" />
            <span asp-validation-for="Client.EmergencyContactPhone" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-page="/Users/User" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar Cliente</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
