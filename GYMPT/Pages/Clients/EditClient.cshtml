@page "{id:int}"
@model GYMPT.Pages.Clients.EditModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header text-center">
                <h2>Editar Cliente: @Model.Client.Name @Model.Client.FirstLastname</h2>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- ===== CAMPO CRÍTICO: Envía el ID de vuelta al servidor ===== -->
                    <input type="hidden" asp-for="Client.Id" />

                    <h5 class="mt-4 mb-3">Información Personal</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Client.Name" class="form-label fw-bold"></label>
                            <input asp-for="Client.Name" class="form-control" />
                            <span asp-validation-for="Client.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Client.FirstLastname" class="form-label fw-bold">Primer Apellido</label>
                            <input asp-for="Client.FirstLastname" class="form-control" />
                            <span asp-validation-for="Client.FirstLastname" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Client.SecondLastname" class="form-label fw-bold">Segundo Apellido</label>
                            <input asp-for="Client.SecondLastname" class="form-control" />
                            <span asp-validation-for="Client.SecondLastname" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Client.Ci" class="form-label fw-bold">Cédula de Identidad</label>
                            <input asp-for="Client.Ci" class="form-control" />
                            <span asp-validation-for="Client.Ci" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Client.DateBirth" class="form-label fw-bold">Fecha de Nacimiento</label>
                            <input asp-for="Client.DateBirth" class="form-control" type="date" />
                            <span asp-validation-for="Client.DateBirth" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />
                    <h5 class="mt-4 mb-3">Información de Fitness y Contacto</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Client.FitnessLevel" class="form-label fw-bold">Nivel de Condición Física</label>
                            <input asp-for="Client.FitnessLevel" class="form-control" placeholder="Ej: Principiante, Intermedio..." />
                            <span asp-validation-for="Client.FitnessLevel" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Client.EmergencyContactPhone" class="form-label fw-bold">Teléfono de Emergencia</label>
                            <input asp-for="Client.EmergencyContactPhone" class="form-control" />
                            <span asp-validation-for="Client.EmergencyContactPhone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Client.InitialWeightKg" class="form-label fw-bold">Peso Inicial (Kg)</label>
                            <input asp-for="Client.InitialWeightKg" class="form-control" type="number" step="0.1" />
                            <span asp-validation-for="Client.InitialWeightKg" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Client.CurrentWeightKg" class="form-label fw-bold">Peso Actual (Kg)</label>
                            <input asp-for="Client.CurrentWeightKg" class="form-control" type="number" step="0.1" />
                            <span asp-validation-for="Client.CurrentWeightKg" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        <a asp-page="/Users/User" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}