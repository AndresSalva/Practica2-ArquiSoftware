@page "{id:int}"
@model GYMPT.Pages.Clients.EditClientModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<h1>Editar Cliente: @Model.Client.Name</h1>

<form method="post">
    <fieldset>
        <legend>Datos del Usuario</legend>
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="Client.Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Apellido Paterno</label>
            <input asp-for="Client.FirstLastname" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Apellido Materno</label>
            <input asp-for="Client.SecondLastname" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">CI</label>
            <input asp-for="Client.Ci" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Fecha de Nacimiento</label>
            <input asp-for="Client.DateBirth" type="date" class="form-control" />
        </div>
    </fieldset>

    <fieldset>
        <legend>Datos Específicos de Cliente</legend>
        <div class="mb-3">
            <label class="form-label">Nivel de Fitness</label>
            <input asp-for="Client.FitnessLevel" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Peso Inicial (kg)</label>
            <input asp-for="Client.InitialWeightKg" type="number" step="0.1" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Peso Actual (kg)</label>
            <input asp-for="Client.CurrentWeightKg" type="number" step="0.1" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Teléfono de Emergencia</label>
            <input asp-for="Client.EmergencyContactPhone" class="form-control" />
        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-page="/Users/User" class="btn btn-secondary">Cancelar</a>
</form>
