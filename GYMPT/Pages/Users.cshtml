@page
@model GYMPT.Pages.UsersModel
@using GYMPT.Domain

<div class="text-center">
    <h1 class="display-4">Gestión de Usuarios</h1>
    <p>Lista general de todos los usuarios registrados en el sistema.</p>
</div>

<table class="table table-striped table-hover mt-4">
    <thead class="thead-dark">
        <tr>
            <th>Nombre Completo</th>
            <th>CI</th>
            <th>Fecha de nacimiento</th>
            <th>Rol</th>
            <th style="width: 15%;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @* Iteramos sobre la lista de usuarios que el PageModel nos ha proporcionado *@
        @foreach (var user in Model.UserList)
        {
            <tr>
                @* Mostramos el nombre y apellido del usuario *@
                <td>@user.Name @user.FirstLastname @user.SecondLastname</td>
                <td>@user.CI</td>
                <td>@user.DateBirth</td>
                <td>
                    @* Usamos un if para mostrar una insignia de color según el rol *@
                    @if (user.Role == "Client")
                    {
                        <span class="badge bg-primary">Cliente</span>
                    }
                    else if (user.Role == "Instructor")
                    {
                        <span class="badge bg-success">Instructor</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@user.Role</span>
                    }
                </td>
                <td>
                    @* Usamos otro if para generar el enlace correcto *@
                    @if (user.Role == "Client")
                    {
                        @* Este enlace apunta a una página llamada "ClientDetails" y le pasa el ID del usuario *@
                        <a class="btn btn-sm btn-info" asp-page="/ClientDetails" asp-route-id="@user.Id">Ver Detalles</a>
                    }
                    else if (user.Role == "Instructor")
                    {
                        @* Este enlace apunta a una página llamada "InstructorDetails" y le pasa el ID del usuario *@
                        <a class="btn btn-sm btn-info" asp-page="/InstructorDetails" asp-route-id="@user.Id">Ver Detalles</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>