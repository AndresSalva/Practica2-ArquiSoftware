@page
@model GYMPT.Pages.Users.CreateModel
<h2>Crear Usuario</h2>

<form method="post">
    <fieldset>
        <legend>Datos de Usuario</legend>

        <div class="form-group">
            <label>Nombre</label>
            <input asp-for="User.Name" class="form-control" />
            <span asp-validation-for="User.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Primer Apellido</label>
            <input asp-for="User.FirstLastname" class="form-control" />
            <span asp-validation-for="User.FirstLastname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Segundo Apellido</label>
            <input asp-for="User.SecondLastname" class="form-control" />
            <span asp-validation-for="User.SecondLastname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>CI</label>
            <input asp-for="User.Ci" class="form-control" />
            <span asp-validation-for="User.Ci" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Fecha de Nacimiento</label>
            <input asp-for="User.DateBirth" type="date" class="form-control" />
            <span asp-validation-for="User.DateBirth" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Rol</label>
            <select asp-for="User.Role" class="form-control">
                <option value="Client">Cliente</option>
                <option value="Instructor">Instructor</option>
            </select>
            <span asp-validation-for="User.Role" class="text-danger"></span>
        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary">Continuar</button>
    <a asp-page="/Users/Index" class="btn btn-secondary">Cancelar</a>
</form>
