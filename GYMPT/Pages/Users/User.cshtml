@page
@model GYMPT.Pages.Users.UserModel

<div class="text-center">
    <h1 class="display-4">Gestión de Usuarios</h1>
    <p>Lista general de todos los usuarios registrados en el sistema.</p>
</div>

<a class="btn btn-success mb-3" asp-page="/Users/Create">+ Crear Usuario</a>

<table class="table table-striped table-hover mt-4">
    <thead class="thead-dark">
        <tr>
            <th>
                <a asp-page="./User" asp-route-sortOrder="Id">ID</a>
            </th>
            <th>
                <a asp-page="./User" asp-route-sortOrder="Name">Nombre Completo</a>
            </th>
            <th>CI</th>
            <th>Fecha de nacimiento</th>
            <th>
                <a asp-page="./User" asp-route-sortOrder="Role">Rol</a>
            </th>
            <th style="width: 15%;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.UserList)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name @user.FirstLastname @user.SecondLastname</td>
                <td>@user.Ci</td>
                <td>@user.DateBirth?.ToShortDateString()</td>
                <td>
                    @if (user.Role == "Client")
                    {
                        <span class="badge bg-primary">Cliente</span>
                    }
                    else if (user.Role == "Instructor")
                    {
                        <span class="badge bg-success">Instructor</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@user.Role</span>
                    }
                </td>
                <td>
                    @if (user.Role == "Client")
                    {
                        <a class="btn btn-sm btn-info" asp-page="/SpecificUserDetail/ClientDetails" asp-route-id="@user.Id">Ver</a>
                        <a class="btn btn-sm btn-warning" asp-page="/Clients/EditClient" asp-route-id="@user.Id">Editar</a>
                        <a class="btn btn-sm btn-danger" asp-page="/Users/DeleteUser" asp-route-id="@user.Id">Eliminar</a>
                    }
                    else if (user.Role == "Instructor")
                    {
                        <a class="btn btn-sm btn-info" asp-page="/SpecificUserDetail/InstructorDetails" asp-route-id="@user.Id">Ver</a>
                        <a class="btn btn-sm btn-warning" asp-page="/Instructors/EditInstructor" asp-route-id="@user.Id">Editar</a>
                        <a class="btn btn-sm btn-danger" asp-page="/Users/DeleteUser" asp-route-id="@user.Id">Eliminar</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-warning" asp-page="/Users/EditUser" asp-route-id="@user.Id">Editar</a>
                        <a class="btn btn-sm btn-danger" asp-page="/Users/DeleteUser" asp-route-id="@user.Id">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>