@page
@model GYMPT.Pages.Users.UserModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="text-center">
    <h1 class="display-4">Gestión de Usuarios</h1>
    <p class="lead text-muted">Lista general de todos los usuarios registrados en el sistema.</p>
</div>

<!-- Botón "Crear" centrado y con estilo mejorado -->
<div class="d-flex justify-content-center my-4">
    <a class="btn btn-primary btn-lg shadow-sm" asp-page="/Users/Create">
        <i class="fas fa-plus me-2"></i>Crear Nuevo Usuario
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <!-- Columna de ID eliminada -->
                    <th>Nombre Completo</th>
                    <th>CI</th>
                    <th>Fecha de nacimiento</th>
                    <th>Rol</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UserList)
                {
                    <tr>
                        <td>@user.Name @user.FirstLastname @user.SecondLastname</td>
                        <td>@user.Ci</td>
                        <!-- Manejo seguro de fechas que pueden ser nulas -->
                        <td>@string.Format("{0:d}", user.DateBirth)</td>
                        <td>
                            @if (user.Role == "Client")
                            {
                                <span class="badge bg-primary">Cliente</span>
                            }
                            else if (user.Role == "Instructor")
                            {
                                <span class="badge bg-success">Instructor</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@user.Role</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <!-- Botones de Ver y Editar -->
                                @if (user.Role == "Client")
                                {
                                    <a class="btn btn-sm btn-outline-info" title="Ver Detalles" asp-page="/SpecificUserDetail/ClientDetails" asp-route-token="@Model.UserTokens[user.Id]"><i class="fas fa-eye"></i></a>
                                    <a class="btn btn-sm btn-outline-warning" title="Editar" asp-page="/Clients/EditClient" asp-route-token="@Model.UserTokens[user.Id]"><i class="fas fa-pencil-alt"></i></a>
                                }
                                else if (user.Role == "Instructor")
                                {
                                    <a class="btn btn-sm btn-outline-info" title="Ver Detalles" asp-page="/SpecificUserDetail/InstructorDetails" asp-route-token="@Model.UserTokens[user.Id]"><i class="fas fa-eye"></i></a>
                                    <a class="btn btn-sm btn-outline-warning" title="Editar" asp-page="/Instructors/EditInstructor" asp-route-token="@Model.UserTokens[user.Id]"><i class="fas fa-pencil-alt"></i></a>
                                }
                                else
                                {
                                    <a class="btn btn-sm btn-outline-warning" title="Editar" asp-page="/Users/EditUser" asp-route-token="@Model.UserTokens[user.Id]"><i class="fas fa-pencil-alt"></i></a>
                                }

                                <!-- Formulario para el botón de eliminar que llama al manejador "Delete" en el backend -->
                                <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" class="d-inline" onsubmit="confirmDelete(event, 'el usuario @user.Name @user.FirstLastname');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <!-- Script que muestra el pop-up de confirmación antes de borrar -->
    <script>
        function confirmDelete(event, userName) {
            event.preventDefault(); // Detiene el envío del formulario para mostrar el pop-up
            const form = event.target;

            Swal.fire({
                title: '¿Estás seguro?',
                text: `¡Esta acción no se puede revertir! Se eliminará a ${userName}.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, ¡eliminar!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit(); // Si el usuario confirma, AHORA SÍ se envía el formulario
                }
            });
        }
    </script>
}