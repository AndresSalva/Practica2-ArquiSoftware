@page
@model GYMPT.Pages.MembershipsModel
@{
    ViewData["Title"] = "Tipos de Membresía";
}

<h1>Tipos de Membresía</h1>
<p>Esta es la lista de membresías disponibles actualmente en el gimnasio.</p>

@* Verificamos si la lista tiene datos antes de intentar dibujar la tabla *@
@if (Model.MembershipList != null && Model.MembershipList.Any())
{
    <table class="table table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio (Bs.)</th>
                <th>Sesiones/Mes</th>
                <th>Descripción</th>
            </tr>
        </thead>
        <tbody>
            @* Este bucle recorre cada 'membership' en la lista que preparamos en el archivo .cs *@
            @foreach (Models.Membership membership in Model.MembershipList)
            {
                <tr>
                    <td>@membership.Name</td>
                    <td>@membership.Price</td>
                    <td>@membership.MonthlySessions</td>
                    <td>@membership.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    @* Si la lista está vacía, mostramos un mensaje amigable *@
    <div class="alert alert-info mt-4" role="alert">
        No hay membresías registradas en este momento.
    </div>
}