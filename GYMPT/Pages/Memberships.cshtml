@page
@model GYMPT.Pages.MembershipsModel
@{
    ViewData["Title"] = "Membresias GYMPT";
}

<h1>Membresías GYMPT</h1>
<div class="mb-4">
    <a asp-page="/MembershipCreate" class="btn btn-primary">
        <i class="fas fa-plus"></i> Crear Nueva Membresía
    </a>
</div>

<h2 class="mt-5">Membresías Activas</h2>

@if (Model.MembershipList != null && Model.MembershipList.Any())
{
    <table class="table table-hover mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio (Bs.)</th>
                <th>Sesiones/Mes</th>
                <th>Descripción</th>
                <th style="width: 150px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var membership in Model.MembershipList)
            {
                <tr>
                    <td>@membership.Name</td>
                    <td>@membership.Price</td>
                    <td>@membership.MonthlySessions</td>
                    <td>@membership.Description</td>
                    <td>
                        <a asp-page="/MembershipEdit" asp-route-id="@membership.Id" class="btn btn-sm btn-success">Editar</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@membership.Id" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que quieres eliminar esta membresía?');">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-4" role="alert">
        No hay membresías activas registradas en este momento.
    </div>
}