@page "{id:int}"
@model GYMPT.Pages.Memberships.MembershipEditModel
@{
    ViewData["Title"] = "Editar Membresía";
}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header text-center">
                <h2>Editar Membresía: @Model.Membership.Name</h2>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- ===== CAMPO CRÍTICO: Envía el ID de vuelta al servidor ===== -->
                    <input type="hidden" asp-for="Membership.Id" />

                    <div class="mb-3">
                        <label asp-for="Membership.Name" class="form-label fw-bold">Nombre membresía</label>
                        <input asp-for="Membership.Name" class="form-control" />
                        <span asp-validation-for="Membership.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Membership.Description" class="form-label fw-bold">Descripción</label>
                        <textarea asp-for="Membership.Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Membership.Description" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Membership.Price" class="form-label fw-bold">Precio</label>
                            <input asp-for="Membership.Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Membership.Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Membership.MonthlySessions" class="form-label fw-bold">Sesiones Mensuales</label>
                            <input asp-for="Membership.MonthlySessions" class="form-control" type="number" />
                            <span asp-validation-for="Membership.MonthlySessions" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        <a asp-page="/Memberships/Membership" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}