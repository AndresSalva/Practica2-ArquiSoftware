@page
@model GYMPT.Pages.Disciplines.DisciplineModel
@{
    ViewData["Title"] = "Gestión de Disciplinas";
}

<div class="text-center">
    <h1 class="display-4">Gestión de Disciplinas</h1>
    <p class="lead text-muted">Administra las clases y horarios del gimnasio.</p>
</div>

<div class="d-flex justify-content-center my-4">
    <a class="btn btn-primary btn-lg shadow-sm" asp-page="/Disciplines/DisciplineCreate">
        <i class="fas fa-plus me-2"></i>Crear Nueva Disciplina
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nombre de la Disciplina</th>
                    <th>Instructor Asignado</th>
                    <th class="text-center">Horario</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var discipline in Model.DisciplineList)
                {
                    <tr>
                        <td class="fw-bold">@discipline.Name</td>
                        <td>
                            @if (discipline.IdInstructor.HasValue &&
                                                    Model.InstructorNames.ContainsKey(discipline.IdInstructor.Value))
                            {
                                @Model.InstructorNames[discipline.IdInstructor.Value]
                            }
                            else
                            {
                                <span class="text-muted">No asignado</span>
                            }
                        </td>
                        <td class="text-center">@discipline.StartTime?.ToString(@"hh\:mm") -
                            @discipline.EndTime?.ToString(@"hh\:mm")</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <form method="post" asp-page-handler="Edit" asp-route-id="@discipline.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-warning" title="Editar">
                                        <i class="fas fa-pencil-alt"></i>
                                    </button>
                                </form>

                                <form method="post" asp-page-handler="Delete" asp-route-id="@discipline.Id" class="d-inline"
                                    onsubmit="return confirmDelete(event, 'la disciplina @discipline.Name');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Script para los pop-ups (confirmación y notificación) -->
    <script>
        function confirmDelete(event, disciplineName) {
            event.preventDefault();
            const form = event.target;
            Swal.fire({
                title: '¿Estás seguro?',
                text: `¡Se eliminará ${disciplineName}! Esta acción no se puede revertir.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, ¡eliminar!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        }
    </script>
    @if (TempData["SuccessMessage"] != null)
    {
        <script type="text/javascript">
            Swal.fire({ icon: 'success', title: '¡Éxito!', text: '@Html.Raw(TempData["SuccessMessage"])', timer: 3000, showConfirmButton: false });
        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <script type="text/javascript">
            Swal.fire({ icon: 'error', title: 'Error', text: '@Html.Raw(TempData["ErrorMessage"])' });
        </script>
    }
}