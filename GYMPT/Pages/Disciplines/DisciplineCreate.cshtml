@page
@model GYMPT.Pages.Disciplines.DisciplineCreateModel
@{
    ViewData["Title"] = "Nueva Disciplina";
}

<h2>Nueva Disciplina</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<form method="post">
    <div class="mb-3">
        <label asp-for="Discipline.Name" class="form-label">Nombre</label>
        <input asp-for="Discipline.Name" class="form-control" />
        <span asp-validation-for="Discipline.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Discipline.IdInstructor" class="form-label">Id del instructor</label>
        <input asp-for="Discipline.IdInstructor" class="form-control" />
        <span asp-validation-for="Discipline.IdInstructor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Discipline.StartTime" class="form-label">Tiempo de inicio</label>
        <input asp-for="Discipline.StartTime" type="time" class="form-control" />
        <span asp-validation-for="Discipline.StartTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Discipline.EndTime" class="form-label">Tiempo de finalización</label>
        <input asp-for="Discipline.EndTime" type="time" class="form-control" />
        <span asp-validation-for="Discipline.EndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="/Disciplines/Discipline" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
