@page "{token}"
@model GYMPT.Pages.Disciplines.DisciplineEditModel
@{
    ViewData["Title"] = "Editar Disciplina";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header text-center">
                <h2>Editar Disciplina: @Model.Discipline.Name</h2>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Campo oculto para enviar el ID de vuelta. ¡Esencial! -->
                    <input type="hidden" asp-for="Discipline.Id" />

                    <div class="mb-3">
                        <label asp-for="Discipline.Name" class="form-label fw-bold">Nombre de la Disciplina</label>
                        <input asp-for="Discipline.Name" class="form-control" />
                        <span asp-validation-for="Discipline.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Discipline.IdInstructor" class="form-label fw-bold">Instructor</label>
                        <select asp-for="Discipline.IdInstructor" class="form-select" asp-items="Model.InstructorOptions">
                            <option value="">-- Seleccione un Instructor --</option>
                        </select>
                        <span asp-validation-for="Discipline.IdInstructor" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Discipline.StartTime" class="form-label fw-bold">Hora de Inicio</label>
                            <input asp-for="Discipline.StartTime" class="form-control" type="time" />
                            <span asp-validation-for="Discipline.StartTime" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Discipline.EndTime" class="form-label fw-bold">Hora de Fin</label>
                            <input asp-for="Discipline.EndTime" class="form-control" type="time" />
                            <span asp-validation-for="Discipline.EndTime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        <a asp-page="./Discipline" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}