@page "{id:int}"
@model GYMPT.Pages.Disciplines.DisciplineEditModel
@{
    ViewData["Title"] = "Editar Disciplina";
}

<h2>Editar Disciplina</h2>

<!-- Mostrar mensaje de éxito si existe -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<form method="post">
    <input type="hidden" asp-for="Discipline.Id" />

    <div class="mb-3">
        <label asp-for="Discipline.Name" class="form-label"></label>
        <input asp-for="Discipline.Name" class="form-control" />
        <span asp-validation-for="Discipline.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Discipline.IdInstructor" class="form-label"></label>
        <input asp-for="Discipline.IdInstructor" class="form-control" />
        <span asp-validation-for="Discipline.IdInstructor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Discipline.StartTime" class="form-label"></label>
        <input asp-for="Discipline.StartTime" type="time" class="form-control" />
        <span asp-validation-for="Discipline.StartTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Discipline.EndTime" class="form-label"></label>
        <input asp-for="Discipline.EndTime" type="time" class="form-control" />
        <span asp-validation-for="Discipline.EndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a asp-page="/Disciplines/Discipline" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}