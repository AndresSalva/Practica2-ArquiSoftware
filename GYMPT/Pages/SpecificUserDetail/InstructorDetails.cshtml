@page "{id:long}"
@model GYMPT.Pages.SpecificUserDetail.InstructorDetailsModel

@{
    ViewData["Title"] = "Detalles del Instructor";
}

@if (Model.Instructor != null)
{
    <h1>Detalles de: @Model.Instructor.Name @Model.Instructor.FirstLastname</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Nombre completo</dt>
        <dd class="col-sm-9">@Model.Instructor.Name @Model.Instructor.FirstLastname @Model.Instructor.SecondLastname</dd>

        <dt class="col-sm-3">Rol</dt>
        <dd class="col-sm-9">@Model.Instructor.Role</dd>

        <dt class="col-sm-3">CI</dt>
        <dd class="col-sm-9">@Model.Instructor.Ci</dd>

        <dt class="col-sm-3">Fecha de Nacimiento</dt>
        <dd class="col-sm-9">@Model.Instructor.DateBirth?.ToShortDateString()"</dd>

        <dt class="col-sm-3">Especialización</dt>
        <dd class="col-sm-9">@Model.Instructor.Specialization</dd>

        <dt class="col-sm-3">Fecha de Contratación</dt>
        <dd class="col-sm-9">@Model.Instructor.HireDate?.ToShortDateString()"</dd>

        <dt class="col-sm-3">Sueldo Mensual</dt>
        <dd class="col-sm-9">@Model.Instructor.MonthlySalary?.ToString("C")"</dd>

        <dt class="col-sm-3">Correo Electrónico</dt>
        <dd class="col-sm-9">@Model.Instructor.Email</dd>
    </dl>

}
else
{
    <h1 class="text-danger">Instructor no encontrado</h1>
    <p>El usuario con el ID especificado no existe o no tiene el rol de instructor.</p>
}

<div class="mt-4">
    <a asp-page="/Users/User" class="btn btn-secondary">← Volver a la Lista de Usuarios</a>
</div>